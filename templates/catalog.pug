                          | Купить
                .catalog__item
                  .catalog__item-img-wrap
                    a(href='#')
                      img(src='img/catalog-6.jpg', width='220', height='165', alt='')
                  .catalog__item-inner
                    h2.catalog__item-desc
                      a.catalog__item-desc-link(href='#')
                        span.catalog__item-type
                          | Набор для бритья
                        span.catalog__item-company
                          | «Baxter of California»
                    .catalog__item-purchase.purchase-block
                      span.purchase-block__price
                        | 3900 руб.
                      button.purchase-block__buy-btn.btn(type='button')
                        | Купить
              .catalog__nav
                ul.catalog__nav-items
                  li.catalog__nav-item
                    button.catalog__nav-btn.btn(type='button')
                      | 1
                  li.catalog__nav-item
                    button.catalog__nav-btn.btn(type='button', disabled)
                      | 2
                  li.catalog__nav-item
                    button.catalog__nav-btn.btn(type='button')
                      | 3
                  li.catalog__nav-item
                    button.catalog__nav-btn.btn(type='button')
                      | 4

    include layouts/footer.pug
